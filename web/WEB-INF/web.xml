<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Servlet01</servlet-name>
        <servlet-class>servlet.Servlet01</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>servlet.RegServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueryAMDServlet</servlet-name>
        <servlet-class>servlet.QueryAMDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Status</servlet-name>
        <servlet-class>servlet.Status</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet01</servlet-name>
        <url-pattern>/servlet/Servlet01</url-pattern><!--这个路径和写的超链接的路径要一致   必须以/开始，表示项目的根目录-->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/servlet/RegServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryAMDServlet</servlet-name>
        <url-pattern>/servlet/QueryAMDServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Status</servlet-name>
        <url-pattern>/servlet/Status</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InitStatusText</servlet-name>
        <servlet-class>servlet.InitStatusText</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitStatusText</servlet-name>
        <url-pattern>/servlet/InitStatusText</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/servlet/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>servlet.FileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/servlet/FileServlet</url-pattern>
    </servlet-mapping>
</web-app>